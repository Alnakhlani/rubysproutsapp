<center>
<h1>List of our users <%= @name %> <%= @surname %>!</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>firstname</th>
        <th>lastname</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %> <!-- #burdaki user bi Ã¼steki pipedaki user -->
        <tr>
          <td> <%= user.id %> </td>
          <td> <%= link_to user.firstname, user_path(user) %> </td>
          <td> <%= user.lastname%> </td>
        </tr>
      <% end %>
    </tbody>
</table>
</center>
